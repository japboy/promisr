{
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "curly": [ 1, "multi-line" ],
    "yoda": [ 1, "always" ],
    "strict": 2,
    "no-unused-vars": [ 1, { "vars": "local", "args": "none" } ],
    "quotes": [ 1, "single", "avoid-escape" ],
    "max-len": [ 1, 100, 2 ]
  }
}
